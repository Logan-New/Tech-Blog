{{#if logged_in}}
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Logout</a>
{{else}}
  <a href="/login">Login</a>
{{/if}}

{{#each posts}}
  <div>
    <h2>{{this.title}}</h2>
    <p>By {{this.user.username}} on {{this.createdAt}}</p>
    <a href="/post/{{this.id}}">Read More</a>
  </div>
{{/each}}
